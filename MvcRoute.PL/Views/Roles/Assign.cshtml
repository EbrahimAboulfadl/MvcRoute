@using Microsoft.AspNetCore.Identity
@model MvcRoute.PL.Models.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign";
    SelectList usersList = new SelectList(ViewBag.Users,nameof(ApplicationUser.Id),nameof(ApplicationUser.UserName));
    SelectList rolesList = new SelectList(ViewBag.Roles, nameof(IdentityRole.Name), nameof(IdentityRole.Name));
}

<h1>Assign</h1>

<h4>Assign Role To User</h4>
<hr />
@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <select asp-items="rolesList" asp-for="RoleName" class="form-control"></select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select asp-items="usersList" asp-for="UserId" class="form-control"></select>

                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
