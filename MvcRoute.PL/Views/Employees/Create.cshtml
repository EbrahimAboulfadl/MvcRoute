@model EmployeeViewModel
@{
    ViewData["Title"] = "Create New Employee";
    SelectList deptList = new SelectList(ViewBag.Departments,nameof(Department.Id),nameof(Department.Name));
}
<h1>Add New Employee</h1>
<div  asp-validation-summary="All"></div>
<form method="post"  asp-action="Create" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>

        </div>   
        <div class="form-group col-md-6">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control">
            <span asp-validation-for="Age" class="text-danger"></span>   
        </div>  
        
        <div class="form-group col-md-6">
            <label asp-for="HiringDate"></label>
            <input asp-for="HiringDate" class="form-control">
            <span asp-validation-for="HiringDate" class="text-danger"></span>   
        </div>    
        <div class="form-group col-md-6">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>   
        </div>  
        <div class="form-group col-md-6">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>   
        </div>   
        <div class="form-group col-md-4">
            <label asp-for="Gender"></label>
            <select asp-items="Html.GetEnumSelectList<Gender>()" asp-for="Gender" class="form-control">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger" />
        </div>     
        <div class="form-group col-md-4">
            <label asp-for="EmpType"></label>
            <select asp-items="Html.GetEnumSelectList<EmpType>()" asp-for="EmpType" class="form-control">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="EmpType" class="text-danger" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="DepartmentId"></label>
            <select asp-items="deptList" asp-for="DepartmentId" class="form-control">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger" />
        </div>
        <div class="form-group col-md-6 custom-file">
            <input asp-for="Image" id="inputimg" type="file" class="custom-file-input">
            <label asp-for="Image" for="inputimg"class="custom-file-label"></label>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>          
    </div>
    <br/>
    <div class="row align-items-start">
        <button class ="col btn btn-primary " type="submit">Add Employee</button>
        <a class="col btn-link" asp-action="Index">Back To List</a>

    </div>
</form>

@section Scripts {
}