@model Employee 
@{
    ViewData["Title"] = $"sad{Model.Name}";
    SelectList deptList = new(ViewBag.Departments, nameof(Department.Id), nameof(Department.Name));
}
@if (Model.Image != null)
{
    <img src="/assets/images/@Model.Image" alt="@Model.Name" class="rounded mx-auto d-block" style="height:200px" />
}
<h1 class="text-center">@Model.Name</h1>

<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" readonly>

        </div>
        <div class="form-group col-md-6">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" readonly>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="HiringDate"></label>
            <input asp-for="HiringDate" class="form-control" readonly>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" readonly>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" readonly>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Gender"></label>
            <select asp-items="Html.GetEnumSelectList<Gender>()" asp-for="Gender" class="form-control" disabled>
                <option value="">Please select</option>
            </select>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="EmpType"></label>
            <select asp-items="Html.GetEnumSelectList<EmpType>()" asp-for="EmpType" class="form-control" disabled>
            </select>
        </div>   
        
   
        <div class="form-group col-md-4">
            <label asp-for="DepartmentId"></label>
            <select asp-items="deptList" asp-for="DepartmentId" class="form-control" disabled>
            </select>
        </div>

    </div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit Department</a>
    <a class="btn btn-secondary" asp-action="Index">Back To List</a>
</div>