@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employees";

}

 <div class="row align-items-start">
     <h1 class="col-10">Employees</h1>
     <a  asp-action="Create" class="btn btn-primary">New Employee</a>
 </div>
 <br/>
@if (TempData["Message"] is not null)
{
    <div class="alert alert-success">@TempData["Message"]</div>

}

    @if (Model.Count() > 0)
    {
        <table class="table table-border table-hover">
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.Email)</th>
                <th>@Html.DisplayNameFor(d => d.Age)</th>
                <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(d=>d.EmpType)</th>
                <th>@Html.DisplayNameFor(d=>d.Gender)</th>
                <th>Actions</th> 
            </tr>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Age</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.EmpType</td>
                    <td>@employee.Gender</td>

                    <td>
                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>

            }
        </table>

    }
    else
    {
    <div class="alert alert-info" role="alert">
        There is no Employees yet!
    </div>
        
    
    }



