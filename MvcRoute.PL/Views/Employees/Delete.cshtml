@model Employee
@{
    ViewData["Title"] = $"Delete {Model.Name}";
}

<h2>Are You Sure You Want To Delete @Model.Name</h2> 
<div>
    <form method="post" asp-action="Delete">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" readonly>

            </div>
            <div class="form-group col-md-6">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" readonly>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="HiringDate"></label>
                <input asp-for="HiringDate" class="form-control" readonly>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Gender"></label>
                <select asp-items="Html.GetEnumSelectList<Gender>()" asp-for="Gender" class="form-control" disabled>
                </select>
                <span asp-validation-for="Gender" class="text-danger" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="EmpType"></label>
                <select asp-items="Html.GetEnumSelectList<EmpType>()" asp-for="EmpType" class="form-control" disabled>
                </select>
            </div>

        </div>
        <button type="submit" class="btn btn-danger">Delete Employee</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>

</div>


