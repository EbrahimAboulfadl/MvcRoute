@model Department
@{
    ViewData["Title"] = $"Delete {Model.Name}";
}

<h2>Are You Sure You Want To Delete @Model.Name</h2> 
<div>
    <form method="post" asp-action="Delete">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly>

            </div>
            <div class="form-group col-md-6">
                <label asp-for="Code"></label>
                <input asp-for="Code" class="form-control" readonly>


            </div>
            <div class="form-group col-md-6">
                <label asp-for="DateOfCreation"></label>
                <input asp-for="DateOfCreation" class="form-control" readonly>
            </div>

        </div>
        <button type="submit" class="btn btn-danger">Delete Department</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>

</div>


