@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";

}

 <div class="row align-items-start">
     <h1 class="col-10">Departments</h1>
     <a  asp-action="Create" class="btn btn-primary">New Department</a>
 </div>
 <br/>

@if (TempData["Message"] is not null)
{
    <div class="alert alert-success">@TempData["Message"]</div>

}

    @if (Model.Count() > 0)
    {
        <table class="table table-border table-hover">
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.Code)</th>
                <th>@Html.DisplayNameFor(d=>d.DateOfCreation)</th>
                <th>Actions</th> 
            </tr>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Name</td>
                    <td>@department.Code</td>
                    <td>@department.DateOfCreation</td>
                    <td>
                    <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-info"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>

            }
        </table>

    }
    else
    {
    <div class="alert alert-info" role="alert">
        There is no departments yet!
    </div>
        
    
    }



