@model Department 
@{
    ViewData["Title"] = $"sad{Model.Name}";
}
<h1>@Model.Name</h1>

<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly>

        </div>
        <div class="form-group col-md-6">
            <label asp-for="Code"></label>
            <input asp-for="Code" class="form-control" readonly>
   

        </div>
        <div class="form-group col-md-6">
            <label asp-for="DateOfCreation"></label>
            <input asp-for="DateOfCreation" class="form-control" readonly>
        </div>

    </div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit Department</a>
    <a class="btn btn-secondary" asp-action="Index">Back To List</a>
</div>